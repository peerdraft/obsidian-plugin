{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "types": ["svelte", "node", "jest"],
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
  },
  "include": [
    "**/*.ts", "**/*.svelte"
  ]
}